<div id="<%= dom_id application %>">
  <% if action_name == "show" %>
    <h1 class="font-bold text-4xl"><%= application.name %></h1>
  <% else %>
    <p class="my-5">
      <strong class="block font-medium mb-1">Name:</strong>
      <%= application.name %>
    </p>
  <% end %>

  <p class="my-5">
    <strong class="block font-medium mb-1">Url:</strong>
    <%= application.url %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= application.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Redirect url:</strong>
    <%= application.redirect_url %>
  </p>

</div>
