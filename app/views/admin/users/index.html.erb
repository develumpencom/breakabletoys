<div class="mt-8 flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <table class="min-w-full divide-y divide-gray-300">
        <thead>
          <tr>
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left font-semibold sm:pl-0">Signed up at</th>
            <th scope="col" class="px-3 py-3.5 text-left font-semibold">Username</th>
            <th scope="col" class="px-3 py-3.5 text-left font-semibold">Email</th>
            <th scope="col" class="px-3 py-3.5 text-left font-semibold">Role</th>
            <th scope="col" class="px-3 py-3.5 text-left font-semibold">Kit Status</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @users.each do |user| %>
            <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 sm:pl-0"><%= user.created_at %></td>
              <td class="whitespace-nowrap px-3 py-4"><%= user.username %></td>
              <td class="whitespace-nowrap px-3 py-4"><%= user.email_address %></td>
              <td class="whitespace-nowrap px-3 py-4"><%= user.role %></td>
              <td class="whitespace-nowrap px-3 py-4"><%= user.kit_state %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
